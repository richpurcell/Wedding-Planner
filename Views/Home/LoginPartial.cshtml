<nav>
    <div class="container">
    @model Login
    <form asp-action="MyLogin" asp-controller="Home" method="post"> <!-- Login is the Method name and Home is the controller (HomeController.cs)-->
        <div class="form-group col-md-10">
            <span asp-validation-for="LoginEmail"></span>
            <label asp-for="LoginEmail" ></label>
            <input asp-for="LoginEmail" id="inputEmail" placeholder="Email" class="form-control">
        </div>
        <div class="form-group col-md-10">
            <span asp-validation-for="LoginPassword"></span>
            <label asp-for="LoginPassword" ></label>
            <input asp-for="LoginPassword" id="inputPassword" placeholder="Password" class="form-control">
        </div>
        <div class="form-group col-md-10">
            <button type="submit" class="btn btn-primary mb-2">Login</button>
        </div>
    </form>
    </div>
</nav>


