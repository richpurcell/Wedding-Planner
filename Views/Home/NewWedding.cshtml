@model Wedding
<div class="container">
    <div class="banner">
        <h1 style="display: inline-block">Plan Your Wedding</h1>
        <a href="/dashboard"><h3 style="display: inline-block; margin-left: 300px;">Dashboard</h3></a>
        <a href="/logout"><h3 style="display: inline-block; margin-left: 100px;">Log Out</h3></a>
    </div>
    <div class="form" style="margin-top: 50px;">
        <form asp-action="NewWedding" asp-controller="Home" method="post">
            <div class="left" style="display: inline-block;">
                <div class="form-group row">
                    <span asp-validation-for="WedderOne"></span>
                    <label asp-for="WedderOne" class="col-md-6 col-form-label"></label>
                    <div class="col-md-6">
                        <input asp-for="WedderOne" id="inputWedderOne" placeholder="WedderOne" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <span asp-validation-for="WedderTwo"></span>
                    <label asp-for="WedderTwo" class="col-md-6 col-form-label"></label>
                    <div class="col-md-6">
                        <input asp-for="WedderTwo" id="inputWedderTwo" placeholder="WedderTwo" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <span asp-validation-for="Date"></span>
                    <label asp-for="Date" class="col-md-6 col-form-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Date" id="inputDate" placeholder="Date" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <span asp-validation-for="Address"></span>
                    <label asp-for="Address" class="col-md-6 col-form-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Address" id="inputAddress" placeholder="Address" class="form-control">
                    </div>
                </div>
            </div>
            <div style="display: block;">
                <button type="submit" class="btn btn-primary mb-2" style="margin-top: 32px;">Create</button>
            </div>
        </form>
    </div>
</div>
